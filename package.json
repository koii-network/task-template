{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start KOII task development in TypeScript.",
  "engines": {
    "node": ">= 16.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "~27.5",
    "@types/next": "^9.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "~5.26",
    "@typescript-eslint/parser": "~5.26",
    "eslint": "~8.16",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-jest": "~26.2",
    "jest": "~28.1",
    "prettier": "~2.6",
    "rimraf": "~3.0",
    "ts-jest": "~28.0",
    "ts-loader": "^9.4.1",
    "tsutils": "~3.21",
    "typescript": "~4.7",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "scripts": {
    "start": "tsc -p tsconfig.json && node build/src/index.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "webpack": "webpack",
    "webpack:prod": "webpack --mode production",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --detectOpenHandles",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "author": "Syed Ghazanfer Anwar <s.ghazanfer@koii.network>",
  "license": "Apache-2.0",
  "dependencies": {
    "@_koi/web3.js": "^0.0.6",
    "@types/axios": "^0.14.0",
    "axios": "^0.27.2",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.0",
    "express": "^4.18.1",
    "joi": "^17.9.2",
    "nedb-promises": "^6.2.1",
    "node-cron": "^3.0.2",
    "request": "^2.88.2",
    "tslib": "~2.4",
    "web3.storage": "^4.4.0"
  }
}
